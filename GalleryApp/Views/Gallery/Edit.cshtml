
@{
}

@model EditViewModel

<style>

    .form-header{
        text-align:center;
        border:2px solid red;
    
    }

    .row {
        border: 2px solid black;
        margin-left: 20em;
        margin-right: 20em;
        align-items: center;
        padding-top: 5em;
        padding-bottom: 5em;
    }

    .form-container {

       padding-top:2em;
    }

    .btn{
        
        border-radius:1em;
        transition: background-color 0.5s,transform 0.5s;      
        
    }

    .btn:hover{
            background-color: #0056b3; 
            transform:translateY(-1px);
    
    }



</style>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div class="form-container">

            <div class="form-header">
                <h3>Edit Gaery</h3>
            </div>
            <form asp-controller="Gallery" asp-action="Edit" asp-route-Id="@Model.Id" method="post" enctype="multipart/form-data" class="p-4">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title...">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" class="form-control"
                           placeholder="Duaration of the trip">
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label">Select type of photography</label>
                    <select asp-for="@Model.CategoryId" class="form-control">
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>


                <div class="text-center">
                    <input class="btn btn-primary mt-3 w-50" type="submit" value="Edit" />
                </div>
            </form>



        </div>
    </div>
</div>

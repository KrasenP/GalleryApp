<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Gallery</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .gallery {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
            flex-direction: row;
            background-color: #fff;
            margin: 20px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .gallery-item {
            flex: 0 0 75%;
            text-align: center;
            justify-content: stretch;
            display: none;
            border-radius: 3em;
        }

            .gallery-item img {
                width: 80%;
                height: auto;
                transition: transform 0.5s;
            }

        .gallery-controls {
            display: flex;
            justify-content: space-between;
            margin-top: 5px;
        }

            .gallery-controls button {
                background-color: #66B2FF;
                color: white;
                border: none;
                padding: 10px 20px;
                margin: 0 10px;
                cursor: pointer;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .gallery-controls button:hover {
                    background-color: #3399FF;
                }

        .info-content-section {
            display: flex;
            justify-content: space-around;
            align-items: center;
            margin-bottom: 5em;
            background-color: #99CCFF;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        .info-section, .author-section {
            text-align: center;
        }

            .author-section a {
                background-color: #66B2FF;
                color: white;
                padding: 5px 15px;
                text-decoration: none;
                border-radius: 5px;
                transition: background-color 0.3s;
            }

                .author-section a:hover {
                    background-color: #3399FF;
                }

    </style>
</head>
<body>
    <h1>Image Gallery</h1>

    <!-- Gallery Container -->
    <div class="gallery">
        @foreach (var image in Model.Images)
        {
            <div class="gallery-item">
                <img src="@Url.Action("GetImage", "Gallery", new { fileName = image.FileName })" alt="Gallery Image">
            </div>
        }

        <div class="camera-style">
            <p>Description: @Model.Description</p>
        </div>
        <!-- Gallery Controls -->
        <div class="gallery-controls">
            <button onclick="plusSlides(-1)">&#10094; Previous</button>
            <button onclick="plusSlides(1)">&#10095; Next</button>
        </div>
      
    </div>
   

    <!-- Info Content Section -->
    <div class="info-content-section">
        <section class="info-section">
            <p>Title: @Model.Title</p>
            <p>Description: @Model.Description</p>
            <p>Count of pictures: @Model.Images.Count</p>
        </section>
        <section class="author-section">
            <p>Author Info</p>
            <a asp-action="All" asp-controller="Gallery">More Galleries</a>
        </section>
    </div>

    <!-- JavaScript for Gallery -->
    <script>
        let slideIndex = 1;
        showSlides(slideIndex);

        function plusSlides(n) {
            showSlides(slideIndex += n);
        }

        function showSlides(n) {
            const galleryItems = document.querySelectorAll('.gallery-item');
            if (n > galleryItems.length) slideIndex = 1;
            if (n < 1) slideIndex = galleryItems.length;
            galleryItems.forEach(item => item.style.display = 'none');
            galleryItems[slideIndex - 1].style.display = 'block';
        }
    </script>
</body>
</html>
@model RegisterFormModel

<head>
    <style>
        body {
            background-color: #f8f9fa; /* Светъл фон за страницата */
            font-family: 'Arial', sans-serif; /* Подобряване на шрифта */
        }

        h1, h2 {
            text-align: center;
            color: #333;
            margin-bottom: 1rem;
        }

        .row {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Центриране на формата вертикално */
        }

        .col-md-4 {
            background: white;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Добавяне на сянка към формата */
        }

        .form-floating {
            margin-bottom: 1rem;
        }

        .form-control {
            border-radius: 5px; /* Заоблени ъгли на полетата */
            border: 1px solid #ced4da;
        }

            .form-control:focus {
                border-color: #80bdff;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25); /* Ефект при фокусиране на поле */
            }

        label {
            color: #6c757d; /* Цвят на текста на етикетите */
        }

        .btn-primary {
            background-color: #007bff; /* Цвят на бутона за регистрация */
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3; /* Смяна на цвета при навеждане на бутона */
            }

        .text-danger {
            margin-top: 0.25rem; /* Подобряване на отстоянието за съобщенията за валидация */
            font-size: 0.875em;
        }
    </style>

</head>

@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm"  method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="UserN" class="form-control"  aria-required="true" />
                <label asp-for="UserN"></label>
                <span asp-validation-for="UserN" class="text-danger"></span>
            </div>
          <div class="form-floating">
                <input asp-for="Status" class="form-control" aria-required="true" />
                <label asp-for="Status"></label>
                <span asp-validation-for="Status" class="text-danger"></span>
          </div>
            <div class="form-floating">
                <input asp-for="UserN" class="form-control" aria-required="true" />
                <label asp-for="UserN"></label>
                <span asp-validation-for="UserN" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
  
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

